<script>
$(function() {
    "use strict";
    var g1;
    window.onload = function() {
        var g1 = new JustGage({
            id: "g1",
            value: {{counts}}[0],
            min: 0,
            max: 100,
            title: "{{title}} MT D",
            label: "{{title}}"
        });
        // setInterval(function() {
        //     g1.refresh(getRandomInt(50, 100));
        // }, 2500);
    };
});
</script>
<div class="row">
    <div class="col-md-6">
        <div class="panel">
            <div class="panel-body">
                <div class="pad10A">
                    <div id="g1" class="md-gauge"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel">
            <div class="panel-body">
              <div class="tile-box bg-blue">
                  <div class="tile-header">
                      Total {{title}}
                      <div id="change" class="float-right">
                          <script>
                            var current = {{counts}}[0],
                            past = {{counts}}[1],
                            str,
                            percentage = Math.round((1-(current/past))*100);
                            if (current > past) {
                              str = '<i class="glyph-icon icon-caret-up"></i> ' + percentage + '% MT D';
                            } else {
                              str = '<i class="glyph-icon icon-caret-down"></i> ' + percentage + '% MT D';
                            }
                            $("#change").html(str);
                          </script>
                      </div>
                  </div>
                  <div class="tile-content-wrapper">
                      <i class="glyph-icon icon-glass"></i>
                      <div class="tile-content">
                          {{total}}
                      </div>
                  </div>
              </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="panel">
        <div class="panel-body">
            <!-- <h3 class="title-hero">
                Switch buttons
            </h3> -->
            <div class="example-box-wrapper">
                <div class="content-box border-top border-blue-alt mrg25B">
                    <h3 class="content-box-header">
                        Tabs Closed
                        <small>(Year to Date)</small>
                    <span class="btn-group btn-group-sm float-right" data-toggle="buttons">
                        <!-- <a href="#" class="btn btn-default">
                            <input name="radio-toggle-1" type="radio">
                            Weekly
                        </a>
                        <a href="#" class="btn btn-default">
                            <input name="radio-toggle-2" type="radio">
                            Monthly
                        </a>
                        <a href="#" class="btn btn-default">
